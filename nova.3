#include <stdio.h>

void hanoi(int n, char from, char to, char via) {
    if (n == 1) {
        printf("%c -> %c\n", from, to);
        return;
    }
    hanoi(n - 1, from, via, to);
    printf("%c -> %c\n", from, to);
    hanoi(n - 1, via, to, from);
}

int main() {
    int n;
    printf("원판 개수 입력: ");
    scanf("%d", &n);

    hanoi(n, 'A', 'C', 'B');
    return 0;
}
