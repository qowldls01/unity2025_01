#include <stdio.h>

#define READ  0x1
#define WRITE 0x2
#define EXEC  0x4

void printFlag(int flag) {
    printf("권한: ");
    if (flag & READ)  printf("READ ");
    if (flag & WRITE) printf("WRITE ");
    if (flag & EXEC)  printf("EXEC ");
    printf("\n");
}

int main() {
    int permission = 0;

    permission |= READ;    // READ 추가
    permission |= WRITE;   // WRITE 추가
    printFlag(permission);

    permission &= ~WRITE;  // WRITE 제거
    printFlag(permission);

    permission |= EXEC;    // EXEC 추가
    printFlag(permission);

    return 0;
}
