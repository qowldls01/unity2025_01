#include <stdio.h>
#include <stdlib.h>
#include <string.h>

typedef struct {
    char name[30];
    int score;
} Student;

int cmp(const void *a, const void *b) {
    return ((Student*)b)->score - ((Student*)a)->score;
}

int main() {
    int n;
    printf("학생 수 입력: ");
    scanf("%d", &n);

    Student *s = malloc(sizeof(Student) * n);

    for (int i = 0; i < n; i++) {
        printf("%d번째 학생 이름 점수: ", i + 1);
        scanf("%s %d", s[i].name, &s[i].score);
    }

    qsort(s, n, sizeof(Student), cmp);

    printf("\n=== 점수 내림차순 정렬 ===\n");
    for (int i = 0; i < n; i++)
        printf("%s: %d\n", s[i].name, s[i].score);

    free(s);
    return 0;
}

